<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/contact"
        android:theme="@style/AppTheme"
    android:background="#ffffff">

    <TextView
        android:id="@+id/blue"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingTop="10dp"
        android:background="@color/lightBlue"
        android:textSize="20sp"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Save Our Shores 345 Lake Avenue,"
        android:id="@+id/textView17"
        android:layout_below="@+id/blue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Suite A Santa Cruz, CA 95062 "
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone: (831)462-5660"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Federal Tax ID Number: 94-2745941"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#000000"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:gravity="center">

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageButton"
            android:background="@drawable/twitt_logo"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"/>

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/fb_logo"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"/>

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="63dp"
            android:id="@+id/imageButton3"
            android:background="@drawable/youtube"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="2dp"/>

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageButton4"
            android:background="@drawable/instagram"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="4dp"/>

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageButton5"
            android:background="@drawable/link_logo"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView17">

        <ImageView
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:layout_marginTop="60dp"
            android:background="@drawable/saves"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>